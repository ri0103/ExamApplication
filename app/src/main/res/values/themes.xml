<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExamApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8cc2ff</item>
        <item name="colorPrimaryVariant">#5eaaff</item>
        <item name="colorOnPrimary">#ededed</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#004f8c</item>
        <item name="colorSecondaryVariant">#4fffb6</item>
        <item name="colorOnSecondary">#171717</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="NumberPickerAddToDo">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/blackorwhite</item>
        <item name="android:fontFamily">@font/mplusregular</item>
    </style>
    
    <style name="BottomNavBar">
        <item name="fontFamily">@font/mplusbold</item>
    </style>



    <style name="PickerStyle" parent="Theme.AppCompat.Light.Dialog">
<!--        <item name="colorAccent">#f0f9ff</item>-->
        <item name="android:windowBackground">@drawable/picker_dialog_bg</item>
        <item name="colorControlHighlight">#ffffe3</item>
        <item name="colorControlActivated">#7ccc70</item>
<!--        <item name="colorSecondary">#004f8c</item>-->
        <item name="colorOnPrimary">#3f98fc</item>
        <item name="android:textColorPrimary">#262626</item>
        <item name="android:textColorSecondary">#262626</item>
        <item name="android:textColorPrimaryInverse">#d9f0ff</item>
        <item name="android:textColorSecondaryInverse">#fffdf0</item>
        <item name="fontFamily">@font/mplusregular</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@drawable/picker_header_bg</item>
    </style>

    <style name="TimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/picker_dialog_bg</item>
        <item name="colorControlHighlight">#ffffe3</item>
        <item name="colorControlActivated">#7ccc70</item>
        <item name="colorOnPrimary">#3f98fc</item>
        <item name="android:textColorPrimary">#262626</item>
        <item name="android:textColorSecondary">#262626</item>
        <item name="android:textColorPrimaryInverse">#d9f0ff</item>
        <item name="android:textColorSecondaryInverse">#fffdf0</item>
        <item name="fontFamily">@font/mplusregular</item>
        <item name="android:timePickerStyle">@style/CustomTimePickerStyle</item>
    </style>

    <style name="CustomTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@drawable/picker_header_bg</item>
        <item name="android:numbersBackgroundColor">#d9f0ff</item>
    </style>





    <style name="Theme.ExamApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ExamApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExamApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>