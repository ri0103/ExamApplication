<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddToDoActivity">

    <EditText
        android:id="@+id/subjectSchedule"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:ems="10"
        android:hint="科目名"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contentSchedule"
        android:gravity="top|left"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:minHeight="100sp"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:hint="内容"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectSchedule" />

    <Button
        android:id="@+id/scheduleSaveButton"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:layout_marginTop="40sp"
        android:backgroundTint="#8cc2ff"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="18sp"

        app:layout_constraintTop_toBottomOf="@id/dateandtimebuttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/dateandtimebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/contentSchedule"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:layout_marginTop="40sp">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_marginRight="10sp">

    <Button
        android:id="@+id/dateScheduleButton"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:backgroundTint="@color/dark_mint_green"
        android:text="日付を選択"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/timeScheduleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentSchedule" />

        <TextView
            android:id="@+id/selectedDateToDo"
            android:layout_width="120sp"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateScheduleButton" />

       </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10sp"
        >

    <Button
        android:id="@+id/timeScheduleButton"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:backgroundTint="@color/dark_mint_green"
        android:text="時間を選択"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateScheduleButton"
        app:layout_constraintTop_toBottomOf="@+id/contentSchedule" />

        <TextView
            android:id="@+id/selectedTimeToDo"
            android:layout_width="120sp"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeScheduleButton" />
    </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>