<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCoverageActivity">

    <EditText
        android:id="@+id/subjectCoverage"
        android:layout_width="300sp"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="科目名"
        android:inputType="textMultiLine"
        android:layout_marginTop="70sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contentCoverage"
        android:layout_width="300sp"
        android:layout_height="200dp"
        android:layout_marginTop="60sp"
        android:ems="10"
        android:gravity="left"
        android:padding="10sp"
        android:hint="範囲を入力してください"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subjectCoverage"
        android:background="@drawable/border1"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/coverageSaveButton"
        android:layout_width="150sp"
        android:layout_height="60sp"
        app:cornerRadius="15sp"
        android:textSize="18sp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/sky_blue"
        android:text="保存"
        android:layout_marginTop="60sp"
        app:layout_constraintTop_toBottomOf="@id/contentCoverage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>