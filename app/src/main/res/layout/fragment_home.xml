<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center">



    <TextView
        android:id="@+id/untilExamTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定期試験まであと"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/mplusregular"

        android:textSize="40sp"/>

    <TextView
        android:id="@+id/untilExamNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="〇〇日"
        app:layout_constraintTop_toTopOf="@id/untilExamTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32sp"
        android:layout_marginBottom="100sp"
        android:textSize="100sp"
        android:fontFamily="@font/mochiypoppone"
        android:textColor="@color/blackoryellow"
        />

        <Button
            android:id="@+id/untilExamSelectButton"
            android:layout_width="250sp"
            android:layout_height="60sp"
            android:backgroundTint="@color/matcha_green"
            android:text="定期試験の開始日を選択"
            app:cornerRadius="18sp"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/untilExamNumber"
            android:textColor="@color/bothwhite"
            android:fontFamily="@font/mpluslight"/>

        <Button
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:id="@+id/untilExamSaveButton"
            android:layout_marginTop="24sp"
            app:cornerRadius="12sp"
            android:textSize="24sp"
            android:textColor="@color/bothwhite"
            android:fontFamily="@font/mplusregular"
            android:text="更新" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>