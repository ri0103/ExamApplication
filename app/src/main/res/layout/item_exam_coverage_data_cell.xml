<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:layout_margin="8sp"
    android:elevation="8sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/coverage_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coverageSubjectText"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:minHeight="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:text="科目名"
            android:textSize="30sp"
            android:fontFamily="@font/mplusbold"/>



        <ScrollView
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_margin="10sp"
            android:fadeScrollbars="false"
            android:id="@+id/coverageScrollView"
            >

            <TextView
                android:id="@+id/coverageContentText"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:text="内容"
                android:textSize="14sp"
                android:fontFamily="@font/mplusregular"
                />

        </ScrollView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

